{
  "rootDir": "../../",
  "preset": "ts-jest",
  "restoreMocks": true,
  "moduleDirectories": ["<rootDir>/src", "node_modules"],
  "moduleNameMapper": {
    "^common(.*)$": "<rootDir>/src/common/$1",
    "^scenes(.*)$": "<rootDir>/src/scenes/$1",
    "^layout(.*)$": "<rootDir>/src/layout/$1",
    "^pods(.*)$": "<rootDir>/src/pods/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/config/test/setup-after.ts"]
}
